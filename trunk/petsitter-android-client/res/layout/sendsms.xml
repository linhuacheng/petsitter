<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout 
    android:layout_height="match_parent" 
    android:layout_width="match_parent" 
    android:orientation="vertical"
    android:background="@drawable/backgroundwithlight"
    xmlns:android="http://schemas.android.com/apk/res/android"> 
    
                <View
                android:layout_width="40sp"
                android:layout_height="20sp" />

        <TextView 
            android:text="@string/sms_content_label"
            style="@style/DescFont"
            android:paddingBottom="5dp" />

        <EditText 
            android:id="@+id/sms_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:background="@drawable/rounded_edittext"
        	android:lines="5"
        	android:gravity="top"
        	android:padding="5dp"/> 

                        <View
                android:layout_width="40sp"
                android:layout_height="20sp" />
        
                        
    <Button
    	android:id="@+id/sms_send_message"
        android:text="@string/sms_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/sms_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

<ImageView 
    android:id="@+id/left_arrow1"
    android:layout_width="30dip"
    android:layout_height="30dip"
    android:src="@drawable/navigation_left" />
    
<TextView 
    android:id="@+id/close_sms"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Back to Pet Sitter Details"/>

</LinearLayout>
</LinearLayout>