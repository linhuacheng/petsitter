<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="appBG" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/petbg_copy</item>
    </style>
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>
     <style name="DescFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextFieldStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">#FFFFFF</item>
<!--         <item name="android:background">#dbdbdb</item> -->
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="MultiTextFieldStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:lines">3</item>
        <item name="android:gravity">top</item>
        <item name="android:typeface">normal</item>
        <item name="android:inputType">textMultiLine</item>
    </style>
</resources>